<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGPXReader.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="AppGPXReader" HorizontalOptions="Center" VerticalOptions="Start" FontSize="Title" Margin="0,40,0,20"/>
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                <ImageButton Style ="{StaticResource GoogleSignInButton}" Clicked="OnGoogleLoginClicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>